{
  "name": "@equeengage/api",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development DB_RETRY_ENABLED=false tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "NODE_ENV=production DB_RETRY_ENABLED=true node dist/server.js",
    "engage:migrate": "NODE_OPTIONS='-r dotenv/config' npx knex --knexfile src/db/knexfile.engage.cjs migrate:latest",
    "engage:rollback": "NODE_OPTIONS='-r dotenv/config' npx knex --knexfile src/db/knexfile.engage.cjs migrate:rollback",
    "engage:seed": "NODE_OPTIONS=\"-r dotenv/config\" npx knex --knexfile src/db/knexfile.engage.cjs seed:run"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@sinclair/typebox": "^0.34.48",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "knex": "^3.1.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
